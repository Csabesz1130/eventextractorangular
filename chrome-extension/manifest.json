{
  "manifest_version": 3,
  "name": "EventFlow",
  "version": "1.0.0",
  "description": "Extract events from any webpage",
  "permissions": ["storage", "activeTab", "contextMenus", "notifications"],
  "host_permissions": ["https://your-domain.com/*"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": ["content/content.css"]
    }
  ],
  "commands": {
    "extract-selection": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Extract event from selected text"
    }
  }
}

